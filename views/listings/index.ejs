<% layout("layouts/boilerplate")%> 

<div class="mt-3">
    <h3>All Listings</h3>
    
</div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for (let data of allListing) { %>
            <a class="removeline" href="/listings/<%=data._id%>">
                <div class="card col listing-card">
                    <img src="<%=data.image.url%>" class="card-img-top" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%=data.title%>
                            </b><br>

                            <%= data.price ? data.price.toLocaleString("en-IN") : "N/A" %> /night

                        </p>
                    </div>
                    
                </div>
                </a>
                <% } %>
            

    </div>

    