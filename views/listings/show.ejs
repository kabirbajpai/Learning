<% layout("layouts/boilerplate") %>


    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3>
                <%= list.title %>
            </h3>
        </div>

        <div class="card col-6 offset-3 mb-3 show-card listing-card">
            <img src="<%= list.image && list.image.url ? list.image.url : 'https://images.unsplash.com/photo-1769470292463-2808d373c35a?q=80&w=1974&auto=format&fit=crop' %>"
                class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
                <p class="card-text">
                    <b>Owned By : <%=list.owner.username%> </b>
                    <br>
                    <br>

                    <%= list.description %><br><br>
                        â‚¹<%= list.price ? list.price.toLocaleString("en-in") : "0" %><br><br>
                            <%= list.location %><br><br>
                                <%= list.country %><br>

                </p>
            </div>
        </div>

        <!-- Buttons -->
        <%if(currUser && currUser._id.equals(list.owner._id)){%>
            <div class="d-flex justify-content-start gap-2 mt-3 offset-2 ">
                <a href="/listings/<%= list._id %>/edit" class="btn btn-dark offset-1 add-btn">Edit</a>

                <form action="/listings/<%= list._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button class="btn btn-dark" type="submit">Delete</button>
                </form>
            </div>

            <%}%>




                <div class="col-8 offset-3 mb-3">
                    <hr>
                    <%if(currUser){%>


                        <h4>leave a review</h4>
                        <form action="/listings/<%=list._id%>/reviews" method="post" novalidate
                            class="needs-validation">

                            <div class="mb-3 mt-3">
                                <label for="rating" class="form-label">Ratings</label>
                                <fieldset class="starability-checkmark">


                                    <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0"
                                        checked aria-label="No rating." />
                                    <input type="radio" id="first-rate1" name="rating" value="1" />
                                    <label for="first-rate1" title="Terrible">1 star</label>
                                    <input type="radio" id="first-rate2" name="rating" value="2" />
                                    <label for="first-rate2" title="Not good">2 stars</label>
                                    <input type="radio" id="first-rate3" name="rating" value="3" />
                                    <label for="first-rate3" title="Average">3 stars</label>
                                    <input type="radio" id="first-rate4" name="rating" value="4" />
                                    <label for="first-rate4" title="Very good">4 stars</label>
                                    <input type="radio" id="first-rate5" name="rating" value="5" />
                                    <label for="first-rate5" title="Amazing">5 stars</label>
                                </fieldset>
                            </div>
                            <div class="mb-3 mt-3">
                                <label for="comment" class="form-label">Comments</label>
                                <textarea name="comment" id="comment" cols="30" rows="5" class="form-control"
                                    required></textarea>
                                <div class="invalid-feedback">add comment before submitting</div>


                            </div>
                            <button class="btn btn-outline-dark">submit</button>
                        </form>

                        <%}%>

                        

                            <hr>
                            <p><b>All Reviews</b></p>
                            <div class="row ms-3 mb-3">
                                <% for (let review of list.reviews) { %>
                                    <div class="col-md-4 col-sm-6 mb-3">
                                        <div class="card h-100">
                                            <div class="card-body">
                                                <h5 class="card-title">@<%=review.author.username%>
                                                </h5>
                                                <p class="starability-result card-text"
                                                    data-rating="<%= review.rating %>">

                                                </p>
                                                <p class="card-text">
                                                    <%= review.comment %>
                                                </p>



                                            </div>
                                            <br>
                                            <form method="post"
                                                action="/listings/<%=list._id%>/reviews/<%=review._id%>?_method=DELETE"
                                                class="mb-3 ms-2">
                                                <button class="btn btn-sm btn-dark">delete</button>
                                            </form>
                                        </div>
                                    </div>
                                    <% } %>
                            </div>




                </div>
    </div>